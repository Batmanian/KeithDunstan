<div class="bg-light p-4 rounded">
  <!--<h3>Sidebar Single</h3>-->
<p class="lead">
        {{ summary }}
      </p>
<hr>
<h4 class="h6">Keywords in this article</h4>
  {%- for tag in tags | filterTagList -%}
            {%- set tagUrl %}/keyword/{{ tag | slug }}/{% endset -%}
            <a href="{{ tagUrl | url }}" class="btn mb-2 btn-outline-dark btn-sm me-2">{{ tag }}</a>
          {%- endfor %}

<br>
<hr>
<small><a href="{{ '/keyword/' | url }}" >View all keywords</a></small>
       
</div>


